%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-group
    = f.input :email, required: true, autofocus: true, class: "form-control"
  .form-group
    = f.input :password, required: true, class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @validatable)
  .form-group
    = f.input :password_confirmation, required: true, class: "form-control"
  .form-actions
    = f.button :submit, "Sign up", class: "btn btn-success"
= render "devise/shared/links"
